<UserControl x:Class="English.UserControlTraner"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:English"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Loaded="UserControl_Loaded">
    <Grid Margin="10,0,0,0">
        <StackPanel Margin="140,0,146,10">
            <TextBlock x:Name="Word" Text="Word" HorizontalAlignment="Center" FontSize="36"></TextBlock>
            <TextBlock x:Name="tWord" Text="[Word]" HorizontalAlignment="Center" FontSize="16"></TextBlock>

            <Button x:Name="T1" Content="Тренировать" Click="Button_Click" Margin="0,10,0,0"/>
            <Button x:Name="T2" Content="Тренировать" Click="Button_Click" Margin="0,10,0,0"/>
            <Button x:Name="T3" Content="Тренировать" Click="Button_Click" Margin="0,10,0,0"/>
            <Button x:Name="T4" Content="Тренировать" Click="Button_Click" Margin="0,10,0,0"/>
            <Button x:Name="T5" Content="Тренировать" Click="Button_Click" Margin="0,10,0,0"/>
        </StackPanel>
    </Grid>
</UserControl>
